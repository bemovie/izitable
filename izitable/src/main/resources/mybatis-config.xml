<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<typeAliases>
		<typeAlias type="com.izitable.model.Customer" alias="Customer"/>
		<typeAlias type="com.izitable.model.Shop" alias="Shop"/>
		<typeAlias type="com.izitable.model.Reservation" alias="Reservation"/>
	</typeAliases>
	
	<mappers>
		<mapper resource="mybatis/customer.xml"/> <!-- 상대경로 -->
		<mapper resource="mybatis/shop.xml"/> <!-- 상대경로 -->
		<mapper resource="mybatis/reservation.xml"/> <!-- 상대경로 -->
	</mappers>
	
</configuration>